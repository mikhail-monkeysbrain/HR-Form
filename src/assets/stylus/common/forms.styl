.form
  height: calc(100vh - 85px)
  overflow-y: scroll
  overflow-x: hidden
  padding-right 25px
  &__title
    font-weight: bold
    font-size: 14px
    line-height: 14px
    text-transform uppercase
    color #475364
    padding-bottom 40px
  .small
    text-transform none

label
  display block

.form-section
  padding-bottom 43px
  &__title
    font-weight: bold
    font-size: 12px
    line-height: 14px
    text-transform: uppercase
    color: #475364
    padding-bottom 16px
  &--score
    padding-top 24px
  &--small-padding
    padding-bottom 20px
    margin-top -23px
    .form-section__title
      padding-bottom 6px

.form-section-inner
  display flex
  justify-content space-between
  align-items center

.label-title
  @extend .form-section__title
  font-size 11px
  line-height 12px
  padding-bottom 8px
  &--mt
    margin-top 20px
  .small
    padding-top 0

.input__wrapper-second
  margin-top 13px

