input[type="text"]
  width: 600px
  height: 36px
  background: #F4F9FB
  border: 1px solid #DCE5EA
  box-sizing: border-box
  border-radius: 3px
  padding 12px
  margin-bottom 20px
  /*&:hover
    &::placeholder
      opacity 0.5
  &:focus
    &::placeholder
      opacity 0*/

.form-submit
  display flex
  justify-content space-between
  align-items center
  padding-top 41px
  padding-bottom 20px

.add-file
  display flex
  flex-direction: column
  align-items flex-start

.link--small
  font-size: 10px
  line-height: 14px
  color: #8EA4B5
  display block
  transform: translateY(-15px)
  margin-bottom 4px

.vs
  &__actions
    padding: 4px 8px 0 3px !important
    svg
      transform: scale(.6) !important
      .vs--open &
        transform: scale(.6) rotate(180deg)!important
      path
        fill #386BF2 !important
  &__clear
    display none

  &__selected
    font-size: 12px
    line-height: 12px
    color #8ea4b5 !important

  &__dropdown-toggle
    height 36px

.v-select
  font-size: 12px
  line-height: 12px
  color #8ea4b5 !important
  margin-bottom 20px

.input__wrapper
  position: relative
  &--phone
    .small
      margin-top -10px

.input
  &__file
    opacity: 0
    visibility: hidden
    position: absolute

    &-button-text
      margin-top: 1px
      font-size: 12px
      line-height: 12px
      color: #8EA4B5
      padding-left 10px

    &-button
      width: 100%
      height 36px
      background: #F4F9FB
      border: 1px solid #DCE5EA
      box-sizing: border-box
      border-radius: 3px
      justify-content center
      align-items center
      padding 4px 5px